    title={SITE_TITLE}
    description={SITE_DESCRIPTION}
  />
  <body class='flow'>
    <Header name={SITE_OWNER} />
    <main>
      <!-- project goes here -->
      <div class='project-details'>
        <h2>Project Name</h2>
        <div class='tech-stack'>
          <h3>Tech Stack:</h3>
          <ul>
            <!-- create a list based on stack used -->
          </ul>
        </div>
        <div class='project-links'>
          <ul>
            <!-- list of links -->
          </ul>
        </div>
      </div>
      <div class='project-content'>
        <slot />
      </div>
    </main>
  </body>
</html>
